{% extends 'admin/base.html.twig' %}

{% block name %}
    Услуги
{% endblock %}
{% block title %}
    Услуги
{% endblock %}

{% block stylesheets %}
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <section id="locales">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <a class="btn btn-primary" href="{{ path('create_service') }}" role="button">Добавить услугу</a>
                    <div class="card" style="margin-top: 10px">
                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">Список портфолио</h3>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Название (ru)</th>
                                        <th>Цена</th>
                                        <th>Редактировать цену/SEO/Фото</th>
                                        <th>Редактировать перевод</th>
                                        <th>Отобраажать в доп.услугах</th>
                                        <th>Удалить</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for service in services %}
                                        <tr>
                                            <th scope="row">{{ service.id }}</th>
                                            <td>{{ service.name }}</td>
                                            <td>{{ service.price }}</td>
                                            <td><a href="{{ path('edit_service', {id: service.id}) }}" class="btn btn-primary active" role="button" aria-pressed="true">Редактировать</a></td>
                                            <td>
                                                <div class="input-group-prepend">
                                                    <button data-toggle="dropdown" type="button" class="btn btn-outline-secondary dropdown-toggle">Редактировать перевод<span class="caret"></span></button>
                                                    <div class="dropdown-menu">
                                                        {% for locale in locales %}
                                                            <a class="dropdown-item" href="{{ path('edit_service_traslation', {'service': service.id, 'locale': locale.id}) }}">{{ locale.short_name }}</a>
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            </td>
                                            <td><input data-id="{{ service.id }}" type="checkbox"  {% if service.is_on_service_page %}checked{% endif %} class="switcher-service" data-toggle="toggle"></td>
                                            <td><button data-id="{{ service.id }}" type="button" class="btn btn-danger remove-project">Удалить</button></td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
    <script>
        $(document).on('click', '.remove-project', function () {
            let id = $(this).attr('data-id');
            if(confirm('Вы уверены?')){
                location.href = '/octo_admin/remove_service/'+id;
            }
        });

        $(document).on('change', '.switcher-service', function () {
            let bool = +$(this).prop('checked');
            let id = $(this).attr('data-id');
            $.ajax({
                url: '/octo_admin/switch_service/'+id+'/'+bool,
            })
                .done(function() {

                });
        });
    </script>
{% endblock %}
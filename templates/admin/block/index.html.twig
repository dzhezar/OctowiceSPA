{% extends 'admin/base.html.twig' %}

{% block name %}
    Блоки Портфолио "{{ project_name }}"
{% endblock %}

{% block title %}
    Блоки Портфолио "{{ project_name }}"
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
{% endblock %}

{% block body %}
    <section id="sort" style=" padding-bottom: 0">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <a class="btn btn-primary" href="{{ path('project_main') }}" role="button">Назад</a>
                    <div class="card" style="margin-top: 10px">
                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">Порядок блоков</h3>
                        </div>
                        <div class="card-body">
                            <ul id="sortable" class="list-group">
                                {% for block in blocks %}
                                    <li style="background: {{ block.color }}; color: {{ block.color_text }};" data-id="{{ block.id }}" class="ui-state-default list-group-item"><span class="ui-icon ui-icon-arrowthick-2-n-s"></span>{{ block.name }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="locales">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <a class="btn btn-primary" href="{{ path('project_block_create', {project: project_id}) }}" role="button">Добавить блок</a>
                    <div class="card" style="margin-top: 10px">
                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">Список портфолио</h3>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Название (ru)</th>
                                        <th>Цвет фона</th>
                                        <th>Цвет текста</th>
                                        <th>Редактировать Фото/Цвет</th>
                                        <th>Редактировать перевод</th>
                                        <th>Удалить</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for block in blocks %}
                                        <tr>
                                            <th scope="row">{{ block.id }}</th>
                                            <td>{{ block.name }}</td>
                                            <td><div style="width: 50px; height: 50px; border: 3px solid black;  background: {{ block.color }}"></div> </td>
                                            <td><div style="width: 50px; height: 50px; border: 3px solid black;  background: {{ block.color_text }}"></div> </td>
                                            <td><a href="{{ path('project_block_edit', {block: block.id}) }}" class="btn btn-primary active" role="button" aria-pressed="true">Редактировать</a></td>
                                            <td>
                                                <div class="input-group-prepend">
                                                    <button data-toggle="dropdown" type="button" class="btn btn-outline-secondary dropdown-toggle">Редактировать перевод<span class="caret"></span></button>
                                                    <div class="dropdown-menu">
                                                        {% for locale in locales %}
                                                            <a class="dropdown-item" href="{{ path('project_block_edit_translation', {'block': block.id, 'locale': locale.id}) }}">{{ locale.short_name }}</a>
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            </td>
                                            <td><button data-id="{{ block.id }}" type="button" class="btn btn-danger remove-block">Удалить</button></td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui-touch-punch/0.2.3/jquery.ui.touch-punch.min.js"></script>
    <script>
        $(document).on('click', '.remove-block', function () {
            let id = $(this).attr('data-id');
            if(confirm('Вы уверены?')){
                location.href = '/octo_admin/project_block_remove/'+id;
            }
        });

        $( function() {
            $( "#sortable" ).sortable({
                axis: "y"
            });
            $( "#sortable" ).disableSelection();
        } );

        $( "#sortable" ).on( "sortupdate", function() {
            let arr = [];
            $("#sortable").find($('li')).each(function () {
                arr.push($(this).attr('data-id'));
            });

            $.ajax({
                method: "POST",
                url: '/octo_admin/change_order/block',
                data:{
                    'order': arr
                }

            })
                .done(function() { });

        } );
    </script>
{% endblock %}
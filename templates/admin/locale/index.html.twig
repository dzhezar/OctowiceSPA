{% extends 'admin/base.html.twig' %}

{% block name %}
    Языки
{% endblock %}
{% block title %}
    Языки
{% endblock %}

{% block body %}
    <section id="locales">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">Список языков</h3>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Название</th>
                                        <th>Короткое название</th>
                                        <th>Редактировать текста</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for locale in locales %}
                                        <tr>
                                            <th scope="row">{{ locale.id }}</th>
                                            <td>{{ locale.name }}</td>
                                            <td>{{ locale.shortName }}</td>
                                            <td><a class="btn btn-primary active" role="button" aria-pressed="true" href="{{ path('edit_locale_text', {'locale': locale.id}) }}">Редактировать</a></td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

        </div>
        </div>
    </section>
{% endblock %}
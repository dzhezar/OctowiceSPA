{% extends 'admin/base.html.twig' %}

{% block name %}
    Типы проектов
{% endblock %}
{% block title %}
    Типы проектов
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

{% endblock %}

{% block body %}
    <section id="sort" style=" padding-bottom: 0">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card" style="margin-top: 10px">
                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">Порядок проектов</h3>
                        </div>
                        <div class="card-body">
                            <ul id="sortable" class="list-group">
                                {% for category in categories %}
                                    <li data-id="{{ category.id }}" class="ui-state-default list-group-item"><span class="ui-icon ui-icon-arrowthick-2-n-s"></span>{{ category.name }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="locales">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <a class="btn btn-primary" href="{{ path('create_category') }}" role="button">Добавить новый тип проекта</a>
                    <div class="card" style="margin-top: 10px">
                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">Список проектов</h3>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Название (ru)</th>
                                        <th>Цена</th>
                                        <th>Редактировать цену/SEO</th>
                                        <th>Редактировать перевод</th>
                                        <th>Удалить</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for category in categories %}
                                        <tr>
                                            <th scope="row">{{ category.id }}</th>
                                            <td>{{ category.name }}</td>
                                            <td>{{ category.price }}</td>
                                            <td><a href="{{ path('edit_category', {id: category.id}) }}" class="btn btn-primary active" role="button" aria-pressed="true">Редактировать</a></td>
                                            <td>
                                                <div class="input-group-prepend">
                                                    <button data-toggle="dropdown" type="button" class="btn btn-outline-secondary dropdown-toggle">Редактировать перевод<span class="caret"></span></button>
                                                    <div class="dropdown-menu">
                                                        {% for locale in locales %}
                                                            <a class="dropdown-item" href="{{ path('edit_category_translation', {'category': category.id, 'locale': locale.id}) }}">{{ locale.short_name }}</a>
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            </td>
                                            <td><button data-id="{{ category.id }}" type="button" class="btn btn-danger remove-category">Удалить</button></td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(document).on('click', '.remove-category', function () {
            let id = $(this).attr('data-id');
            if(confirm('Внимание, удаление этого типа проекта приведёт к удалению его дочерних портфолио, Уверены?')){
                location.href = '/octo_admin/remove_category/'+id;
            }
        });

        $( function() {
            $( "#sortable" ).sortable();
            $( "#sortable" ).disableSelection();
        } );

        $( "#sortable" ).on( "sortupdate", function() {
            let arr = [];
            $("#sortable").find($('li')).each(function () {
                arr.push($(this).attr('data-id'));
            });

            $.ajax({
                method: "POST",
                url: '/octo_admin/change_order/category',
                data:{
                    'order': arr
                }

            })
                .done(function() { });


        } );
    </script>


{% endblock %}